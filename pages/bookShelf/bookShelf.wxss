/* pages/bookShelf/bookShelf.wxss */

.book-shelf {
  padding: 30rpx;
}

.shelf-list {
  display: flex;
  flex-flow: wrap;
  align-items: flex-start;
}
.shelf-item {
  width: 214rpx;
  border-radius: 10rpx;
}
.shelf-item:not(:nth-child(3n)) {
  margin-right: 24rpx;
}
.shelf-item image {
  width: 100%;
  height: 295rpx;
  border-radius: 10rpx;
}
.shelf-item view {
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  margin-bottom: 15rpx;
}
.shelf-item.add-book {
  height: 295rpx;
  background: #2c3340;
  position: relative;
}
.shelf-item.add-book image {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.shelf-list::after {
  content: "";
  flex: auto;
}