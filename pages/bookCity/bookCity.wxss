/**pages/bookCity/bookCity.wxss**/

.search {
  position: relative;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.search input {
  height: 80rpx;
  border-radius: 80rpx;
  padding: 0 50rpx;
}
.search image {
  position: absolute;
  top: 50%;
  right: 60rpx;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.novel-list-box .box-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 30rpx;
}
.novel-list-box .box-head .title text {
  display: inline-block;
  padding-left: 20rpx;
}
.novel-list-box .refresh text {
  vertical-align: middle;
  font-size: 28rpx;
}
.novel-list-box .refresh image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.novel-list-box .novel-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-flow: row;
  flex-wrap: wrap;
  padding: 0 30rpx;
}
.novel-list-box .novel-item {
  width: 145rpx;
  font-size: 28rpx;
  line-height: 34rpx;
  margin-bottom: 30rpx;
}
.novel-list-box .novel-item image {
  width: 100%;
  height: 200rpx;
}
.novel-list-box .novel-item view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}